{
    "semi": true,
    "useTabs": false,
    "endOfLine": "lf",
    "printWidth": 88,
    "overrides": [
        {
            "files": [
                "*.html",
                "*.js",
                "*.json",
                "*.prettierrc"
            ],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": [
                "*.md"
            ],
            "options": {
                "proseWrap": "always"
            }
        },
        {
            "files": [
                "*.tex"
            ],
            "options": {
                "proseWrap": "always",
                "printWidth": 88,
                "tabWidth": 2
            }
        }
    ]
}